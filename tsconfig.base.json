{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022","DOM","DOM.Iterable"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,    // Suppress unused local variable warnings
    "noUnusedParameters": false,  // S    
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "useUnknownInCatchVariables": false
  }
}
